# Conky theme put together by Culinax
# Part of the Manjaro Awesome WM Respin

own_window yes
own_window_type desktop
own_window_hints below,skip_taskbar,skip_pager
own_window_colour 000000
own_window_argb_visual yes
own_window_argb_value 200
alignment top_right
gap_x 18
gap_y 36
use_xft yes
xftfont Terminus:size=9
uppercase no
update_interval 2
total_run_times 0
double_buffer yes
no_buffers yes
draw_shades no
draw_outline no
draw_borders no
minimum_size 200 200
maximum_width 250

TEXT
${color #447799}CLOCK${hr}
${color #9eb1ba}${time %d %B %Y}${alignr}${color #ffffff}${font Terminus:size=12}${time %H:%M}${font}  

${color #447799}MANJAROLINUX${hr}
${color #9eb1ba}Host:${alignr}${color #ffffff}${nodename}
${color #9eb1ba}Kernel:${alignr}${color #ffffff}${kernel}
${color #9eb1ba}Uptime:${alignr}${color #ffffff}${uptime}
${color #9eb1ba}CPU:${alignr}${color #ffffff}${cpu cpu0}%
${color #9eb1ba}RAM:${alignr}${color #ffffff}${mem} / ${memmax}

${color #447799}PROCESSES${hr}
${color #9eb1ba}${top_mem name 1}${alignr}${color #ffffff}${top_mem mem 1}
${color #9eb1ba}${top_mem name 2}${alignr}${color #ffffff}${top_mem mem 2}
${color #9eb1ba}${top_mem name 3}${alignr}${color #ffffff}${top_mem mem 3}
${color #9eb1ba}${top_mem name 4}${alignr}${color #ffffff}${top_mem mem 4}

${color #447799}KEYBINDINGS${hr}
${color #9eb1ba}Mod4+p${color #ffffff}${alignr}Dmenu
${color #9eb1ba}Mod4+Return${color #ffffff}${alignr}Terminal
